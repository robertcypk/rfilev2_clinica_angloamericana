<table id="table4" class="table table-striped- table-hover">
                    <thead>
                      <tr>
                        <th style="width:15%;">Responsable</th>
                        <th style="width:20%;">Paciente</th>
                        <th style="width:15%;">Estado</th>
												<th style="width:10%;">H. Clínica</th>
                        <th style="width:10%;">F. Cita</th>
												<th style="width:10%;">Progreso</th>
                        <th style="width:5%;"></th>
                      </tr>
                    </thead>
                    <tbody>
                     	{% for item in solicitudes %}
                      <tr class="online">
                        <td class="user-avatar cell-detail user-info">
													{% if item.responsable != "" %}
													<img src="assets/img/avatar.jpg" alt="Avatar">
													<span> {{ item.responsable }}</span>
													<span class="cell-detail-description">{{ item.rol|replace({'ROLE_':''}) }}</span>
													{% endif %}
												</td>
                        <td class="cell-detail">
													<span> {{ detallepaciente(item.codpaciente,'nompaciente') }} {{ detallepaciente(item.codpaciente,'apellidomaterno') }} {{ detallepaciente(item.codpaciente,'apellidopaterno') }}</span>
													<span class="cell-detail-description">{{ detallepaciente(item.codpaciente,'codpaciente') }}</span>
													</td>
													<td class="cell-detail">
														<span>{{ stpedido(item.estado) }}</span>
														<span class="cell-detail-description">
														{% if item.estado == 1 %}
															{% if item.codsede == 1 %}
															Almacén: SAN ISIDRO 
															{% else %}
															Almacén: LA MOLINA
															{% endif %}
														{% elseif item.estado == 2  %}
															{% if item.codsede == 1 %}
															Almacén: SAN ISIDRO 
															{% else %}
															Almacén: LA MOLINA
															{% endif %}
														{% elseif item.estado == 3  %}
															Zona: {{item.codzona}} - {{item.nomconsultorio}}
														{% elseif item.estado == 4  %}
															Zona: {{item.codzona}} - {{item.nomconsultorio}}
														{% elseif item.estado == 5  %}
															Zona: {{item.codzona}} - {{item.nomconsultorio}}
														{% elseif item.estado == 6  %}
															{% if item.codsede == 1 %}
															Almacén: SAN ISIDRO 
															{% else %}
															Almacén: LA MOLINA
															{% endif %}
														{% elseif item.estado == 7  %}
															{% if item.codsede == 1 %}
															Almacén: SAN ISIDRO 
															{% else %}
															Almacén: LA MOLINA
															{% endif %}
														{% endif %}
														</span>
													</td>

													<td class="cell-detail">
														<span>{{ item.codhistoria }}</span>
														<span class="cell-detail-description">Caja:{{ item.caja|default("n/a") }}
														</span>
													</td>
					
													<td class="cell-detail">
														<span>{{ item.fechapedido|date('d') }} de {{ nombre_de_meses(item.fechapedido|date('m')) }}</span>
														<span class="cell-detail-description">{{ item.horapedido|date('h:i a') }}</span>
													</td>
													<td class="milestone"><span class="completed">22 / 30</span><span class="version">v1.1.5</span>
														<div class="progress">
															<div style="width: 75%" class="progress-bar progress-bar-primary"></div>
														</div>
													</td>
												<td class="text-right">
													{# <div class="btn-group btn-hspace">
														<button type="button" data-toggle="dropdown" class="btn btn-secondary btn-xs dropdown-toggle">Abrir
															<span class="icon-dropdown s7-angle-down"></span>
														</button>
														<div role="menu" class="dropdown-menu dropdown-menu-right ">
															<a href="#" data-estado="2" data-idsolicitud="{{ item.idsolicitud }}" data-user="{{ app.user.idusuario }}" class="dropdown-item confirmarproceso">Para recoger</a>
															<a href="#" data-estado="3" data-idsolicitud="{{ item.idsolicitud }}" data-user="{{ app.user.idusuario }}" class="dropdown-item confirmarproceso">En Trayecto</a>
															<a href="#" data-estado="4" data-idsolicitud="{{ item.idsolicitud }}" data-user="{{ app.user.idusuario }}" class="dropdown-item confirmarproceso">En consultorio</a>
															<a href="#" data-estado="5" data-idsolicitud="{{ item.idsolicitud }}" data-user="{{ app.user.idusuario }}" class="dropdown-item confirmarproceso">Para Devolución</a>
															<a href="#" data-estado="6" data-idsolicitud="{{ item.idsolicitud }}" data-user="{{ app.user.idusuario }}" class="dropdown-item confirmarproceso">En Devolución</a>
															<a href="#" data-estado="7" data-idsolicitud="{{ item.idsolicitud }}" data-user="{{ app.user.idusuario }}" class="dropdown-item confirmarproceso">En Almacén</a>
															<a href="#" data-estado="8" data-idsolicitud="{{ item.idsolicitud }}" data-user="{{ app.user.idusuario }}" class="dropdown-item confirmarproceso">Rechazar</a>
															<div class="dropdown-divider"></div>
															<a href="{{ path('solicitud_detalle',{idsolicitud:item.idsolicitud}) }}" class="dropdown-item">Ver Detalles</a>
															<!-- Formulario para volver a imprimir de forma unitaria -->
															<a href="#" data-idsolicitud="{{ item.idsolicitud }}"  class="dropdown-item reimprimirsolicitud">Imprimir solicitud</a>
															<form id="aceptar_solicitud_{{ item.idsolicitud }}" action="{{ path("aceptar_solicitud") }}" method="POST">
																<input type="hidden" class="custom-control-input" value="{{ item.idsolicitud }}" name="solicitud[{{ loop.index0 }}][idsolicitud]">
																<input type="hidden" value="{{ app.user.idusuario }}" name="solicitud[{{ loop.index0 }}][user]" >
															</form>
															<!-- -->
														</div>
													</div> #}
                        </td>
                      </tr>
                    {% endfor %}
                    </tbody>
                  </table>