{{ form_start(form) }}

<div class="panel panel-default">
	
	
	<div class="panel-heading panel-heading-divider">
		Datos generales
		<span class="panel-subtitle">Ingresa los datos de la zona requerida </span>						
	</div>	
	<div class="panel-body">
		<div class="form-group row">
			<label class="col-3 col-form-label text-right">Sede <span class="text-danger">*</span></label>
			<div class="col-6">                      
				{{ form_widget(form.sede) }}                     
			</div>
		</div>
		
		<div class="form-group row">
			<label class="col-3 col-form-label text-right">Área <span class="text-danger">*</span></label>
			<div class="col-6">                      
				{{ form_widget(form.tipo) }}                     
			</div>
		</div>
		<div class="form-group row">
			<label class="col-3 col-form-label text-right">Referencia <span class="text-danger">*</span></label>
			<div class="col-6">                      
				{{ form_widget(form.nombre) }}                     
			</div>
		</div>
		<div class="form-group row">
			<label class="col-3 col-form-label text-right">Codigo <span class="text-danger">*</span></label>
			<div class="col-3">                      
				{{ form_widget(form.codzona, {'attr': {'placeholder': 'COD-0000', 'data-parsley-required-message':'Ingresa un código'}}) }}      
				
				
			</div>
		</div>
		<div class="form-group row">
			<label class="col-3 col-form-label text-right">Estatus <span class="text-danger">*</span></label>
			<div class="col-3">                      
				{{ form_widget(form.status) }}                     
			</div>
		</div>
		
		
		{{ form_widget(form) }}
		
		
		<div class="form-group row pt-5 pb-5">
			<div class="col-3">				
			</div>
			<div class="col-6 ">
				
				<!-- <button type="submit" class="btn btn-danger btn-lg px-5">GUARDAR USUARIO</button>					 -->
				<button type="submit" class="btn btn-danger btn-lg px-5" >{{ button_label|default('REGISTRAR ZONA') }}</button>
				<a class="btn btn-secondary btn-lg px-5 " href="{{ path('tbl_areas_index') }}">CANCELAR</a>						
				<p class="msg"></p>
			</div>
		</div>
		
	</div>
</div>

{{ form_end(form) }}